@model Analyzer.Models.Device


<form method="post" asp-action="Create">
     <div class="border p-3">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group row">
             <h2 class="text-info pl-3">Add Device</h2>
         </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SN"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SN" class="form-control" />
                        <span asp-validation-for="SN" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Model"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ModelName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ModelName" class="form-control" />
                        <span asp-validation-for="ModelName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Comments"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Comments" class="form-control" />
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="OtherComments"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="OtherComments" class="form-control" />
                        <span asp-validation-for="OtherComments" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TotalCount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TotalCount" class="form-control" />
                        <span asp-validation-for="TotalCount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TesterTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TesterTime" class="form-control" />
                        <span asp-validation-for="TesterTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PersntLost"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PersntLost" class="form-control" />
                        <span asp-validation-for="PersntLost" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PersntResult"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PersntResult" class="form-control" />
                        <span asp-validation-for="PersntResult" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Result"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Result" class="form-control" />
                        <span asp-validation-for="Result" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>

     </div>


</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}