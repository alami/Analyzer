@model IEnumerable<Analyzer.Models.Device>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Device List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Device" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Device
            </a>
        </div>
    </div>

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
             <thead>
                 <tr>
                     <th>Device Name</th>
                    <th>Serial Number</th>
                    <th>Model</th>
                    <th>Model Name</th>
                    <th>Comments</th>
                    <th>Other Comments</th>
                    <th>Total Count</th>
                    <th>Tester Time</th>
                    <th>%<br />Lost</th>
                    <th>% Result</th>
                    <th>Result</th>
                     <th>Device action</th>
                     <th>Stage action</th>
                 </tr>
             </thead>
             <tbody>
                 @foreach(var obj in Model)
                {
                    <tr>
                        <td width=7%>@obj.Name</td>
                        <td width=7%>@obj.SN</td>
                        <td width=7%>@obj.Model</td>
                        <td width=7%>@obj.ModelName</td>
                        <td width=7%>@obj.Comments</td>
                        <td width=7%>@obj.OtherComments</td>
                        <td width=7%>@obj.TotalCount</td>
                        <td width=7%>@obj.TesterTime</td>
                        <td width=0%>@obj.PersntLost</td>
                        <td width=7%>@obj.PersntResult</td>
                        <td width=7%>@obj.Result</td>
                        <td>
                            <div class="w075 btn-group" role="group">
                                <a asp-controller="Device" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Device" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="w075 btn-group" role="group">
                                @if (obj.Stage == null)
                                {
                                    <a asp-controller="SInit" asp-action="Create" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                        <i class="fa-solid fa-user-tie"></i> Create Init stage 
                                    </a>
                                }
                                @if (obj.Stage == Stages.Init)
                                {
                                    <a asp-controller="SInit" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                        <i class="fa-solid fa-user-tie"></i>Edit Init Stage</a>
                                }
                                @if (obj.Stage == Stages.Tester)
                                {
                                    <a asp-controller="STester" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                        <i class="fa-solid fa-user-tie"></i>Edit Tester Stage
                                    </a>
                                }
                                @if (obj.Stage == Stages.Analyser)
                                {
                                    <a asp-controller="SAnalуzer" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                        <i class="fa-solid fa-user-tie"></i>Edit Analyser Stage
                                    </a>
                                }
                                @if (obj.Stage == Stages.Calculate)
                                {
                                    <a asp-controller="SAnalуzer" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                        <i class="fa-solid fa-user-tie"></i>Edit Calculate Stage
                                    </a>
                                }
                                @if (obj.Stage == Stages.Result)
                                {
                                    <a asp-controller="SAnalуzer" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                        <i class="fa-solid fa-user-tie"></i>Edit Result Stage
                                    </a>
                                }

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No devices</p>
    }
</div>