@model IEnumerable<Analyzer.Models.Device>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Analyzer Stage Device List</h2>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Device Name</th>
                    <th>Serial Number</th>
                    <th>Model</th>
                    <th>Model Name</th>
                    <th>Comments</th>
                    <th>Other Comments</th>
                    <th>Total Count</th>
                    <th>Tester Time</th>
                    <th>Analyzer Stage action</th>
                    <th>Next Stage action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width=7%>@obj.Name</td>
                        <td width=7%>@obj.SN</td>
                        <td width=7%>@obj.Model</td>
                        <td width=7%>@obj.ModelName</td>
                        <td width=15%>@obj.Comments</td>
                        <td width=15%>@obj.OtherComments</td>
                        <td width=7%>@obj.TotalCount</td>
                        <td width=7%>@obj.TesterTime</td>

                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Device" asp-controller="SCalculate" asp-action="Create" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                    Calculate Stage
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No devices</p>
    }
</div>