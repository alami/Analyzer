                                <label style="width:150px">@component.Name</label>
                                <label style="width:50px">@component.Price</label>
                                <input asp-for="DevCompPartsList[i].Id" hidden />
                                <input asp-for="DevCompPartsList[i].DeviceId" hidden />
                                <input asp-for="DevCompPartsList[i].ComponentId" hidden />
