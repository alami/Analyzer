                                <input asp-for="DevCompAssList[i].Stage" hidden />
                                <input asp-for="DevCompAssList[i].Pos" hidden />
                                <input asp-for="DevCompAssList[i].Type" hidden />
                                <input asp-for="DevCompAssList[i].Comment" class="form-control" style="width: 100px" />
                                <input asp-for="DevCompAssList[i].Value" class="form-control" style="width: 50px" />
                            </div>
                        </div>
                    }
                }
                <label style="padding-top:15px"><b>Parts List</b></label>
                @if (Model.DevCompPartsList != null)
                {
                    @for (int i = 0; i < Model.DevCompPartsList.Count(); i++)
