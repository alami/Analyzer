@model Analyzer.Models.VM.StageEditVM


<form method="post" asp-action="Edit">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Create Init Stage by Administrator</h2>
            <h4>
                for Device @Model.Device.Name , SN @Model.Device.SN, Model @Model.Device.Model
            </h4>
        </div>
        <div class="row" style="padding-top: 10px">
            <div class="col-8">
                <label style="padding-top:15px"><b>Evaluate List</b></label>
                @if (Model.DevCompEvalList != null)
                {
                    @for (int i = 0; i < Model.DevCompEvalList.Count(); i++)
                    {
                        <div style="display:inline">
                            <div class="input-group">
                                @{
                                    int componentId = Model.DevCompEvalList[i].ComponentId;
                                    Component component = Model.CompList.FirstOrDefault(u => u.Id == componentId);
                                }
                                <label style="width:150px">@component.Name</label>
                                <label style="width:50px">@component.Price</label>
                                <input asp-for="DevCompEvalList[i].Id" hidden />
                                <input asp-for="DevCompEvalList[i].DeviceId" hidden />
                                <input asp-for="DevCompEvalList[i].ComponentId" hidden />
                                <input asp-for="DevCompEvalList[i].Stage" hidden />
                                <input asp-for="DevCompEvalList[i].Pos" hidden />
                                <input asp-for="DevCompEvalList[i].Type" hidden />
                                <input asp-for="DevCompEvalList[i].Comment" class="form-control" style="width: 100px" />
                                <input asp-for="DevCompEvalList[i].Value" class="form-control" style="width: 50px" />
                            </div>
                        </div>
                    }
                }
                <label style="padding-top:15px"><b>Accessories List</b></label>
                @if (Model.DevCompAssList != null)
                {
                    @for (int i = 0; i < Model.DevCompAssList.Count(); i++)
                    {
